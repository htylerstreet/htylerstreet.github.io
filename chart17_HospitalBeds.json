{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "title": {
      "text": "Number of hospital beds in European countries",
      "subtitle": "per 10,000 of the population. Data source: WHO",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/htylerstreet/htylerstreet.github.io/main/data_WHO-WHS6_102.json",
      "format": {
            "type": "json", 
            "property": "fact"}
      },
  
     "height": 300,
    "width": 300,
    "mark": {"type": "point", "point": false, "color": "skyblue"},
    "encoding": {
      "x": {
        "field": "dim.YEAR",
        "type": "temporal",
        "scale": {"domain":["2000", "2019"]},
        "title": null,
        "axis": {"grid": false}
      },
      "y": {
        "field": "Value",
        "type": "quantitative",
        "scale": {"domain":[20,95]},
        "title": null,
        "axis": {"grid": false}
      },
    "color": {
        "field": "dim.COUNTRY",
        "type": "nominal",
        "scale": {"scheme": "turbo"},
        "title": "",
        "legend": { 
          "fillColor": "#FcFdFd"}
      },
      "tooltip": [
      {"field": "dim.YEAR", 
       "type": "temporal", 
      "title": "Date"
      },
      {
        "field": "dim.COUNTRY",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "Value",
        "type": "quantitative",
        "title": "Hospital beds per 10,000",
        "format": ",.0f"
      }
    ]
    },
      "selection": {
    "Region": {
      "type": "single",
      "fields": ["dim.COUNTRY"],
      "bind": {
        "input": "select",
        "options": [
          null,
          "Armenia", "Albania", "Austria", "Azerbaijan", "Belgium", "Bulgaria", "Germany", "Italy", "Spain", "Poland", "Netherlands", "Greece", "Portugal","Finland", "Sweden", "Switzerland", "Denmark", "Croatia", "Romania"
        ],
        "name": "Country"
      }
    }
  },
  "transform": [
    
    {"filter": {"selection": "Region"}},
    {
      "filter": {
        "field": "dim.YEAR",
        "range": [
          {"year": 2000},
          {"year": 2019}
        ]
      }
    },      
        {"filter": {
          "field": "dim.COUNTRY", 
          "oneOf": ["Armenia", "Albania", "Austria", "Azerbaijan", "Belgium", "Bulgaria", "Germany", "Italy", "Spain", "Poland", "Netherlands", "Greece", "Portugal","Finland", "Sweden", "Switzerland", "Denmark", "Croatia", "Romania"]}
          }
  ]
  }