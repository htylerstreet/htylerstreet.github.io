{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "New Covid Cases in the UK",
        "subtitle":"Comparing 3 different cities in the North",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"
      },
      
       "data": {
        "url": "https://raw.githubusercontent.com/htylerstreet/htylerstreet.github.io/main/ltla_2021-10-03.csv",
        "format": {"type": "csv"}
      },
    
       "transform":[
          
          {"filter": {
            "field": "areaName", 
            "oneOf": ["Manchester", "Leeds", "Liverpool"]}
            }
    
    
        ],
      
      
      "height": 300,
      "width": 300,
       
      "mark": {"type": "line", "point": false},
     
      "encoding": {
    
        "x": {
          "field": "date",
          "type": "temporal",
          "title": null,
          "axis": {"grid": false}
        },
    
        "y": {
          "field": "newCasesBySpecimenDate",
          "type": "quantitative",
          "title": null,
          "axis": {"grid": false}
        },
    
        "color": {
          "field": "areaName",
          "type": "nominal",
          "scale": {"scheme": "category20"},
          "title": "",
          "legend": {
            "orient": "top-left", 
            "fillColor": "#FcFdFd"}
        }
      }
  }
